{% extends "OVEAuthentificationBundle:Default:ove-base.html.twig" %}

{% block content -%}
    <h1>Liste des Utilisateurs</h1>

    <table width="500" class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Id Association</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td style="text-align:center">{{ entity.id }}</td>
                <td style="text-align:left">{{ entity.login }}</td>
                <td style="text-align:center">{{ entity.idassociation }}</td>
                <td style="text-align:center">




                <a href="{{ path('utilisateur_edit',   { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>&nbsp;
                <a href="{{ path('utilisateur_delete', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-remove"></span></a>



                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



<a type="button" class="btn btn-sm btn-default" href="{{ path('utilisateur_new') }}"><span class="glyphicon glyphicon-plus"></span> Ajouter un nouvel utilisateur</a>



    {% endblock %}
