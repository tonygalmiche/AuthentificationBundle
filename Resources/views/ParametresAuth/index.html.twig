{% extends "OVEAuthentificationBundle:Default:ove-base.html.twig" %}

{% block content -%}



<h1>Paramètres d'authentification</h1>


<form class="edit-form" action="{{ path('parametresauth_update') }}" method="post" {{ form_enctype(form) }}>
  <input type="hidden" name="_method" value="PUT" />
  {{ form_widget(form._token) }}



  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">

        <div class="form-group col-lg-12">
          <label class="control-label nowrap" style="text-align:left">Introduction lors de l'authentification : </label>
          {{ form_widget(form.introduction, {'attr': {'style': 'width:100%'}}) }}
        </div>

        <div class="form-group col-lg-12">
          <label class="control-label nowrap" style="text-align:left">Présentation complète de l'application : </label>
          {{ form_widget(form.information, {'attr': {'style': 'width:100%'}}) }}
        </div>

        <div class="form-group col-lg-8">
          <label class="control-label nowrap" style="text-align:left">Feuille de style : </label>
          {{ form_widget(form.css, {'attr': {'class': 'form-control text-left'}}) }}
        </div>




      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2 text-left" >
        <button class="btn btn-primary" type="submit">Sauvegarder</button>
      </div>
    </div>
  </div>


</form>



{% endblock %}
