{% extends "OVEAuthentificationBundle:Default:ove-base.html.twig" %}
{% block content %}
<h1>Liste des associations</h1>

<table width="400" class="records_list">
    <thead>
        <tr>
            <!--<th>Id</th>-->
            <th>Nom de l'association</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td style="text-align:left"  >{{ entity.name }}</td>
            <td style="text-align:center">{{ entity.type }}</td>
            <td>
                <a href="{{ path('association_edit',   { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>&nbsp;
                <a href="{{ path('association_delete', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-remove"></span></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a type="button" class="btn btn-sm btn-default" href="{{ path('association_new') }}"><span class="glyphicon glyphicon-plus"></span> Ajouter une nouvelle association</a>



{% endblock %}
